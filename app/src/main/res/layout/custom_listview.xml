<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:weightSum="10">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:src="@mipmap/ic_launcher"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:paddingLeft="10dp"
        >
        <TextView
            android:id="@+id/titlename"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textColor="#000"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/name"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/titlename"
            android:text="Huỳnh Kim Thắng"
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/titlegender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:textColor="#000"
            android:text="Gender: "
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:textColor="#000"
            android:layout_toRightOf="@id/titlegender"
            android:text="Nam"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/titleage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titlegender"
            android:textColor="#000"
            android:text="Age: "
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gender"
            android:layout_toRightOf="@id/titleage"
            android:textColor="#000"
            android:text="20"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/titlephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleage"
            android:textColor="#000"
            android:text="Phone: "
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/age"
            android:layout_toRightOf="@id/titlephone"
            android:textColor="#000"
            android:text="0769779154"
            android:textSize="15sp"/>
    </RelativeLayout>
</LinearLayout>